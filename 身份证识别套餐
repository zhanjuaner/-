    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const idCardInput = document.getElementById('id-card');
            const checkBtn = document.getElementById('check-btn');
            const resetBtn = document.getElementById('reset-btn');
            const uploadBtn = document.getElementById('upload-btn');
            const cameraBtn = document.getElementById('camera-btn');
            const uploadInput = document.getElementById('upload-id-card');
            const errorMsg = document.getElementById('error-msg');
            const successMsg = document.getElementById('success-msg');
            const resultSection = document.getElementById('result-section');
            const ageGender = document.getElementById('age-gender');
            const packageName = document.getElementById('package-name');
            const packageDesc = document.getElementById('package-desc');
            const packageItems = document.getElementById('package-items');
            const cameraPreview = document.getElementById('camera-preview');
            const ocrLoading = document.getElementById('ocr-loading');
            
            // 上传按钮点击事件
            uploadBtn.addEventListener('click', function() {
                uploadInput.click();
            });
            
            // 文件选择事件
            uploadInput.addEventListener('change', function(e) {
                if (e.target.files && e.target.files[0]) {
                    const file = e.target.files[0];
                    const reader = new FileReader();
                    
                    reader.onload = function(e) {
                        cameraPreview.innerHTML = `<img src="${e.target.result}" alt="身份证预览">`;
                        recognizeIDCard(file);
                    };
                    
                    reader.readAsDataURL(file);
                }
            });
            
            // 拍照按钮点击事件
            cameraBtn.addEventListener('click', function() {
                alert("在真实环境中，这里会调用设备摄像头进行拍照。由于浏览器安全限制，本演示版本请使用上传图片功能。");
            });
            
            // 识别身份证函数
            function recognizeIDCard(imageFile) {
                ocrLoading.style.display = 'block';
                
                Tesseract.recognize(
                    imageFile,
                    'chi_sim+eng', // 中文和英文识别
                    { 
                        logger: m => console.log(m) 
                    }
                ).then(({ data: { text } }) => {
                    ocrLoading.style.display = 'none';
                    
                    // 从识别文本中提取身份证号码
                    const idMatch = text.match(/\d{17}[\dXx]/);
                    if (idMatch) {
                        const idCard = idMatch[0];
                        idCardInput.value = idCard;
                        successMsg.textContent = '身份证号码识别成功！';
                        successMsg.style.display = 'block';
                        
                        // 自动查询套餐
                        checkPackage();
                    } else {
                        errorMsg.textContent = '未能识别到身份证号码，请尝试更清晰的图片或手动输入';
                        errorMsg.style.display = 'block';
                    }
                }).catch(err => {
                    ocrLoading.style.display = 'none';
                    errorMsg.textContent = '识别失败：' + err.message;
                    errorMsg.style.display = 'block';
                });
            }
            
            // 查询按钮点击事件
            checkBtn.addEventListener('click', checkPackage);
            
            function checkPackage() {
                const idCard = idCardInput.value.trim();
                
                // 隐藏错误和结果
                errorMsg.style.display = 'none';
                successMsg.style.display = 'none';
                resultSection.style.display = 'none';
                
                // 验证身份证格式
                if (!isValidIdCard(idCard)) {
                    errorMsg.textContent = '请输入有效的18位身份证号码';
                    errorMsg.style.display = 'block';
                    return;
                }
                
                // 计算年龄和性别
                const age = calculateAge(idCard);
                const gender = getGender(idCard);
                
                if (age < 16) {
                    errorMsg.textContent = '年龄不足16岁，不在体检范围内';
                    errorMsg.style.display = 'block';
                    return;
                }
                
                if (age > 80) {
                    errorMsg.textContent = '年龄超过80岁，不在体检范围内';
                    errorMsg.style.display = 'block';
                    return;
                }
                
                // 获取套餐信息
                const packageInfo = getPackageInfo(age, gender);
                
                // 显示结果
                ageGender.textContent = `${age}岁${gender}`;
                packageName.textContent = packageInfo.name;
                packageDesc.textContent = packageInfo.desc;
                
                // 清空并添加套餐项目
                packageItems.innerHTML = '';
                packageInfo.items.forEach(item => {
                    const itemElement = document.createElement('div');
                    itemElement.className = 'package-item';
                    itemElement.innerHTML = `<i class="fas fa-check-circle"></i> ${item}`;
                    packageItems.appendChild(itemElement);
                });
                
                // 显示结果部分
                resultSection.style.display = 'block';
                successMsg.textContent = '查询成功！';
                successMsg.style.display = 'block';
            }
            
            // 重置按钮点击事件
            resetBtn.addEventListener('click', function() {
                idCardInput.value = '';
                cameraPreview.innerHTML = '<span>预览区域</span>';
                errorMsg.style.display = 'none';
                successMsg.style.display = 'none';
                resultSection.style.display = 'none';
            });
            
            // 验证身份证格式
            function isValidIdCard(idCard) {
                // 基本格式验证
                if (!/^\d{17}[\dXx]$/.test(idCard)) {
                    return false;
                }
                
                // 校验码验证
                const factors = [7, 9, 10, 5, 8, 4, 2, 1, 6, 3, 7, 9, 10, 5, 8, 4, 2];
                let sum = 0;
                
                for (let i = 0; i < 17; i++) {
                    sum += parseInt(idCard.charAt(i)) * factors[i];
                }
                
                const remainder = sum % 11;
                const checkCodes = ['1', '0', 'X', '9', '8', '7', '6', '5', '4', '3', '2'];
                const checkCode = checkCodes[remainder];
                
                return idCard.charAt(17).toUpperCase() === checkCode;
            }
            
            // 计算年龄
            function calculateAge(idCard) {
                const birthYear = parseInt(idCard.substring(6, 10));
                const birthMonth = parseInt(idCard.substring(10, 12)) - 1; // 月份从0开始
                const birthDay = parseInt(idCard.substring(12, 14));
                
                const today = new Date();
                const birthDate = new Date(birthYear, birthMonth, birthDay);
                
                let age = today.getFullYear() - birthDate.getFullYear();
                const monthDiff = today.getMonth() - birthDate.getMonth(
